@model Todo.Models.List

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>List</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ListTitle)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ListTitle)
        </dd>

    </dl>
</div>

<table class="table">
    <tr>
        <th>
            
        </th>
        <th>
            Name
        </th>
        <th>
            Due Date
        </th>
        <th>
            Details
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Items)
    {
        <tr>
            <td>
                <a href="@Url.Action("ToggleDone", new { id=item.ItemID })">
                    @if (item.IsDone)
                {
                        <span class="glyphicon glyphicon-check"></span>
                    }
                    else
                    {
                        <span class="glyphicon glyphicon-unchecked"></span>
                    }
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DueDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Details)
            </td>
            <td>
                @Html.ActionLink(" ", "Edit", new { id = item.ListID }, new { @class = "glyphicon glyphicon-pencil", title = "Edit" }) |
                @Html.ActionLink(" ", "Details", new { id = item.ListID }, new { @class = "glyphicon glyphicon-list", title = "Details" }) |
                @Html.ActionLink(" ", "Delete", new { id = item.ListID }, new { @class = "glyphicon glyphicon-trash", title = "Delete" }) | 
            </td>
        </tr>
    }
</table>
    <p>
        @Html.ActionLink("Mark All Done", "AllDone", new { id = Model.ListID })|
        @Html.ActionLink("Edit", "Edit", new { id = Model.ListID }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
